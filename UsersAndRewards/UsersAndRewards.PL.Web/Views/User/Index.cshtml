@using UsersAndRewards.Shared;
@model List<UserViewModel>


@{
    ViewBag.Title = "Index";
}

<h2>Users</h2>

<p>
    @Html.ActionLink("Create New User", "Create")
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>DateOfBirth</th>
            <th>Age</th>
            <th>Rewards</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.DateOfBirth.ToShortDateString()</td>
                <td>@user.Age</td>
                <td>@user.Rewards</td>
                <td>
                    @Html.ActionLink("Edit", "Update", new { UserId = user.ID })
                    @Html.ActionLink("Delete", "DeleteUser", new { UserId = user.ID })
                </td>
            </tr>
        }
    </tbody>

</table>
